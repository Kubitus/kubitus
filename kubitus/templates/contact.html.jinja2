{% block content %}
<article>
  <header>
    <h2>Contactez-nous</h2>
  </header>
  <div class="address">
    <p><strong>Kubitus</strong></p>
    <p>1, rue Louis et Marie Louise Baumer<br />
       69120 VAULX-EN-VELIN</p>
    <p>Tél. : 04 27 11 81 37</p>
  </div>

  <div class="mail">
    <form method="POST">
      <label for="social">Raison Sociale *</label>
      <input type="text" name="social" />
      <label for="name">Nom *</label>
      <input type="text" name="name" id="name" />
      <label for="firstname">Prénom *</label>
      <input type="text" name="firstname" id="firstname" />
      <label for="function">Fonction *</label>
      <input type="text" name="function" id="function" />
      <label for="email">Email</label>
      <input type="text" name="email" id="email" />
      <label for="phone">N° téléphone *</label>
      <input type="text" name="phone" id="phone" />
      <label for="comment">Commentaire</label>
      <textarea name="comment" id="comment"></textarea>
      <label>Vérification</label>
      <script type="text/javascript"
              src="http://www.google.com/recaptcha/api/challenge?k=6LerttYSAAAAAB7Cb_jbBxxpAHIOz-owf1X4ivYN">
